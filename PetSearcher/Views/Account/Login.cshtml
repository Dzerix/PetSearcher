@model PetSearcher.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}
<h3>Для размещения объявления войдите в свой аккаунт или зарегистрируйтесь.</h3>
<hr />
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-md-2" asp-for="Email"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                        </label>
                        Remember me?
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-success" />
                    <a asp-action="Register" class="btn btn-primary">Зарегистрироваться</a>
                </div>



            </form>
        </section>

    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}