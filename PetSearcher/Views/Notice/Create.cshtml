@model PetSearcher.Models.Notice

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Notice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KindOfPet" class="control-label">Выберите вид питомца</label>
                <select asp-for="KindOfPet" asp-items="@PetSearcher.Helper.HelperClass.GetPetTypesForDropDown()" class="form-select"></select>
                <span asp-validation-for="KindOfPet" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group mt-2">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" accept="image/png,image/jpeg,image/jpg" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="hidden" name="Location" asp-for="Location" id="Location" />

            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" onchange="document.getElementById('CreateBtn').disabled = !this.checked;" value="" id="PrivacyCheckBox">
                <label class="form-check-label" for="flexCheckDefault">
                    Согласен с <a asp-controller="Home" asp-action="Privacy">политикой конфиденциальности</a>
                </label>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="CreateBtn" class="btn btn-primary mt-2" disabled />

            </div>
        </form>
    </div>
    <div class="col-md-6 ">
        <div id="map"></div>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>


    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=4197ee0c-9c41-4d12-8830-0e48eb87f7a0" type="text/javascript"></script>
    <script src="~/js/event_reverse_geocode.js" type="text/javascript"></script>
    

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
