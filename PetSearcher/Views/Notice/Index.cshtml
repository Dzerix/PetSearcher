@model IEnumerable<PetSearcher.Models.Notice>

@{
    ViewData["Title"] = "Index";
}
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager


    <p>
        <a class="btn btn-success" asp-action="Create">Разместить объявление</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.KindOfPet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Фото питомца
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KindOfPet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src="@("~/Image/"+ item.ImageName)" asp-append-version="true" width="384" height="216"/>
                    </td>
                    <td>
                        @if (User.IsInRole("Support"))
                        {
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
